FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    "(left_1|bottom_1|right_3|bottom_3|left_4|right_4|bottom_4|walls)"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    "(top_1|top_2|top_3|top_4|bottom_2|right_1|left_2|right_2|left_3)"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    movingObject
    {
        type            zeroGradient;
    }
    patchOverset
    {
        patchType       overset;
        type            zeroGradient;
    }
}

