    pRefCell        0;
    pRefPoint    (0 0 0);
    pRefValue       0;

    ddtCorr                    yes;
    correctPhi                 no;
    checkMeshCourantNo  yes;

    moveMeshOuterCorrectors no;
    turbOnFinalIterOnly no;

    oversetAdjustPhi    no;
}

