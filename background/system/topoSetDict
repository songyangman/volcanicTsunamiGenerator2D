FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

X	-1.5;//2.5;
Y	0.0005;
Z	0.5;//2.0;

actions
(
    {
        name    c1;
        type    cellSet;
        action  new;
        source  regionToCell;
        insidePoints (($X $Y $Z));
    }

    {
        name    c2;
        type    cellSet;
        action  new;
        source  cellToCell;
        set     c1;
    }

    {
        name    c2;
        type    cellSet;
        action  invert;
    }
);

