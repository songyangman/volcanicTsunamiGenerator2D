FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

Xcenter	0.0;      // 원통 중심 X 좌표
Ycenter	0.0;      // 원통 중심 Y 좌표
Zmin	-1.4;     // 원통의 시작 깊이 (bottom)
Zmax	0.7;      // 원통의 끝 높이 (top)
Radius	0.45;      // 원의 반지름

actions
(
    {
        name    c0;
        type    cellSet;
        action  new;
        source  cylinderToCell;
        point1  ($Xcenter $Ycenter $Zmin);  // 원통 시작점
        point2  ($Xcenter $Ycenter $Zmax);  // 원통 끝점
        radius  $Radius;
    }

    {
        name    c0;
        type    cellSet;
        action  invert;
    }
);

// ************************************************************************* //
