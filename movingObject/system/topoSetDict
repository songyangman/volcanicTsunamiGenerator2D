FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

X0	-0.6;
Y0	-1.6;
Z0	-0.01;

X1	0.6;
Y1	0.7;//초반에 잠겨있는 깊이인 0.725여야 함. 근데 이게 해상도상 잘 표현이 되야됨
Z1	0.01;

//blockMesh 옆으로 3칸 이상 띄워져 있지 않으면 솔버가 작동 안함.
//blockMesh가 -1.8~1.8이므로 구멍은 -1.2~1.2최대임(셀 하나 간격이 0.2)

actions
(
    {
        name    c0;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     ($X0 $Y0 $Z0) ($X1 $Y1 $Z1);
    }

    {
        name    c0;
        type    cellSet;
        action  invert;
    }
);

